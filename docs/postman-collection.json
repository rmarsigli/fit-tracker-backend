        {
          "name": "Show Segment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/segments/1",
              "host": ["{{base_url}}"],
              "path": ["segments", "1"]
            },
            "description": "Get a single segment by ID."
          }
        },
        {
          "name": "Update Segment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Segment Name\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/segments/1",
              "host": ["{{base_url}}"],
              "path": ["segments", "1"]
            },
