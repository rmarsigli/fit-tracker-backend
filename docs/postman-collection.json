          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/segments/nearby?latitude=-23.5505&longitude=-46.6333&radius=10",
              "host": ["{{base_url}}"],
              "path": ["segments", "nearby"],
              "query": [
                {
                  "key": "latitude",
                  "value": "-23.5505",
                  "description": "Latitude (-90 to 90)"
                },
                {
                  "key": "longitude",
                  "value": "-46.6333",
                  "description": "Longitude (-180 to 180)"
                },
                {
                  "key": "radius",
                  "value": "10",
